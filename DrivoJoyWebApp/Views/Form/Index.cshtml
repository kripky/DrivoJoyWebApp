@model DrivoJoyWebApp.Models.RTOFormDetailsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    ViewBag.Title = "Index";
}

<div ng-app="RTOForms" ng-controller="LandingPageController" style="width:100%;height:600px">

    <div ng-view style="float:left;width:75%;"> </div>

    <div style="float:right;width:25%;padding-left:30px;padding-top:20px">
        <div class="container" style="width:40px;height:80px;border-color:gray">

            <div style="padding-left:4px;padding-top:3px;">
                <h3>Are you a Seller or Buyer</h3>
                <br />
                <select class="form-control select" ng-model="FormSelected"  data-ng-options="x for x in Choice "></select>
            </div>


            <div style="padding-top:3px;">
                <h3 style="align-content:center">Buyer and Seller RTO</h3>
                <br />

                <div style="float:left;width:50%;" class="form-control select">
                    <select ng-model="SellerRTO" data-ng-options="x for x in SellRTOList "></select>
                </div>
                <div style="float:right;width:50%;" class="form-control select">
                    <select ng-model="BuyerRTO" data-ng-options="x for x in BuyRTOList "></select>
                </div>

            </div>

            
            <div style="align-content:center"><input type="button" class="btn btn-primary" value="Go To Form"
       ng-click="submitForm()" /></div>  
           
            
            
            

        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</div>

